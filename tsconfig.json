{
    "compilerOptions": {
      "module": "ES2020",
      "lib": ["ES2020", "DOM", "dom.iterable"],
      "noImplicitAny": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "jsx": "react",
      "jsxFactory": "tsx",
      "target": "ES2020",
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "importHelpers": true,
      "moduleResolution": "node"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}