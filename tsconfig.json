{
    "compilerOptions": {
      "module": "amd",
      "lib": ["ES2019", "DOM"],
      "noImplicitAny": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "jsx": "react",
      "jsxFactory": "tsx",
      "target": "ES5",
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "importHelpers": true,
      "moduleResolution": "node"
    },
    "include": ["./src/widgets/*"],
    "exclude": ["node_modules"]
}